{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "System.Net.Http.HttpClient": "Warning"
            }
        },
        "WriteTo": [
            { "Name": "Console" }
        ]
    },
    "General": {
        "StartYear": 2025,
        "Authors": "cytoph",
        "VersionCreationLimit": 100
    },
    "Package": {
        "Id": "Blazor.Radzen.Theming",
        "RepositoryOwner": "cytoph",
        "RepositoryName": "blazor-radzen-theming",
        "RepositoryBranchName": "main"
    },
    "BasePackage": {
        "Id": "Radzen.Blazor",
        "RepositoryOwner": "radzenhq",
        "RepositoryName": "radzen-blazor",
        "ContentFolderPath": "Radzen.Blazor/themes"
    },
    "Staging": {
        "KeepFolder": true
    },
    "Artifact": {
        "PackageBuildFolderName": "buildTransitive",
        "PackageContentFolderName": "themes",
        "BuildPropertyPrefix": "BRT_",
        "ProjectContentFolderName": "Radzen.Blazor"
    },
    "GitHub": {
        "CommitMessageTemplate": "Update theme files to v{basePackageVersion}",
        "ReleaseNoteTemplate": "{commitMessage}\n\nSee base package release notes:\n{basePackageReleaseUrl}"
    },
    "NuGet": {
        "Source": "https://api.nuget.org/v3/index.json"
    }
}
